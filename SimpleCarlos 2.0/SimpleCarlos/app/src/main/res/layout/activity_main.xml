<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.working4enjoyment.simplecarlos.MainActivity"
    android:orientation="vertical">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/degradado">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center">


            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addThousand"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:id="@+id/buttonThousand"
                android:layout_marginBottom="10dp"
                app:backgroundTint="#FF9800"/>


            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addMillion"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:id="@+id/buttonMillion"
                android:layout_marginBottom="40dp"
                app:backgroundTint="#FF9800"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:text="@string/battery"
                android:id="@+id/buttonBattery"
                app:backgroundTint="#FF9800"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/batteryInfo"
                android:textAlignment="center"
                android:id="@+id/textBattery"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/divideZero"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:id="@+id/buttonZero"
                android:layout_marginTop="10dp"
                app:backgroundTint="#FF9800"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
   </ScrollView>

</android.widget.LinearLayout>
